{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <div class="table-header">
      <a href="/teachers/create">Novo +</a>
      <form action="/teachers" method="GET">
        <input type="text" name="filter" value="{{filter}}" placeholder="Filtrar por nome">
        <button type="submit">Filtrar</button>
      </form>
    </div>
    <table width="100%">
      <thead>
        <tr>
          <th>Nome completo</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
        <tr>
          <td>
            <span style="background-image: url({{teacher.avatar_url}})"></span>
            <p>{{teacher.name}}</p>
          </td>
          <td>
            {% for subject_taught in teacher.subjects_taught %}
              <span>{{subject_taught}}</span>
            {% endfor %}
          </td>
          <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}