{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/teachers">
    <section class="image"></section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Avatar</div>
        <div>
          <input type="url" name="avatar_url" placeholder="https://">
        </div>
      </div>

      <div class="item">
        <div>Nome completo</div>
        <div>
          <input type="text" name="name" placeholder="Nome">
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="education_level">
            <option value="high_school">Ensino médio completo</option>
            <option value="undergraduete">Ensino superior completo</option>
            <option value="master_degree">Mestrado</option>
            <option value="doctorate">Doutorado</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span>
            <input type="radio" name="type_class" value="presential" checked="checked">
            Presencial
          </span>
          <span>
            <input type="radio" name="type_class" value="remotely">
            À distância
          </span>
        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="classes" placeholder="Separe as matérias ensinadas por virgulas">
        </div>
      </div>

      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock content %}