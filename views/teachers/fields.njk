<div class="item">
  <div>Avatar</div>
  <div>
    <input 
      type="url" 
      name="avatar_url" 
      placeholder="https://" 
      value="{{teacher.avatar_url}}"
    >
  </div>
</div>

<div class="item">
  <div>Nome completo</div>
  <div>
    <input 
      type="text" 
      name="name" 
      placeholder="Nome" 
      value="{{teacher.name}}"
    >
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input 
      type="date" 
      name="birth" 
      value="{{teacher.birth}}"
    >
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="education_level">
      <option 
          value="high_school"
          {% if teacher.education_level == "high_school" %}
              selected 
          {% endif %}
      >Ensino médio completo
      </option>
      <option 
          value="undergraduete" 
          {% if teacher.education_level == "undergraduete" %}
              selected 
          {% endif %}>Ensino superior completo
      </option>
      <option 
          value="master_degree" 
          {% if teacher.education_level == "master_degree" %}
              selected 
          {% endif %}
      >Mestrado
      </option>
      <option 
          value="doctorate"
            {% if teacher.education_level == "doctorate" %}
              selected 
          {% endif %}
      >Doutorado
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span>
      <input 
        type="radio" 
        name="type_class" 
        value="presential" 
        {% if teacher.type_class == "presential" %}
          checked="checked"
        {% endif %}
      >Presencial
    </span>
    <span>
      <input 
        type="radio" 
        name="type_class" 
        value="remotely" 
        {% if teacher.type_class == "remotely" %}
          checked="checked"
        {% endif %}
      >À distância
    </span>
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input 
      type="text" 
      name="classes" 
      placeholder="Separe as matérias ensinadas por virgulas"
      value="{{teacher.classes}}"
    >
  </div>
</div>
