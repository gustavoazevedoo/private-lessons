{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Nome completo</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}
        <tr>
          <td>
            <span style="background-image: url({{student.avatar_url}})"></span>
            <p>{{student.name}}</p>
          </td>
          <td>
            {% for class in student.classes %}
              <span>{{class}}</span>
            {% endfor %}
          </td>
          <td><a href="/students/{{student.id}}">Ver</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}